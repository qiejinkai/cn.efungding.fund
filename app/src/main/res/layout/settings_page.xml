<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fund_background"
    tools:context="cn.efunding.fund.activity.HelpActivity">

    <include layout="@layout/commen_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_alignParentTop="true"
        android:id="@+id/include3"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="20dp"
        android:id="@+id/v4"
        android:layout_below="@+id/include3"
        android:background="@color/separate_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/identity"
        android:layout_below="@+id/v4"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="实名认证"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:id="@+id/realName"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:text="123"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="3px"
        android:id="@+id/v5"
        android:layout_below="@+id/identity"
        android:background="@color/separate_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bankcard"
        android:layout_below="@+id/v5"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="我的银行卡"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:id="@+id/bankcardNo"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:text="未绑定"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:id="@+id/v6"
        android:layout_below="@+id/bankcard"
        android:background="@color/separate_line"></View>



    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="20dp"
        android:id="@+id/v7"
        android:layout_below="@+id/v6"
        android:background="@color/separate_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/loginPwd"
        android:layout_below="@+id/v7"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="登录密码"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:text="修改"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="3px"
        android:id="@+id/v8"
        android:layout_below="@+id/loginPwd"
        android:background="@color/separate_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tradePwd"
        android:layout_below="@+id/v8"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="交易密码"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:text="修改"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:id="@+id/v9"
        android:layout_below="@+id/tradePwd"
        android:background="@color/separate_line"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="20dp"
        android:id="@+id/v10"
        android:layout_below="@+id/v9"
        android:background="@color/separate_line"></View>


