<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fund_background"
    tools:context="cn.efunding.fund.activity.HelpActivity">

    <include layout="@layout/commen_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_alignParentTop="true"
        android:id="@+id/include3"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="20dp"
        android:id="@+id/v4"
        android:layout_below="@+id/include3"
        android:background="@color/separate_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/question"
        android:layout_below="@+id/v4"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="常见问题"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="3px"
        android:id="@+id/v5"
        android:layout_below="@+id/question"
        android:background="@color/separate_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/feedback"
        android:layout_below="@+id/v5"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="意见反馈"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:id="@+id/v6"
        android:layout_below="@+id/feedback"
        android:background="@color/separate_line"></View>



    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="20dp"
        android:id="@+id/v7"
        android:layout_below="@+id/v6"
        android:background="@color/separate_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/l1"
        android:layout_below="@+id/v7"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="客户服务"/>
        <TextView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="400-089-4896"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="3px"
        android:id="@+id/v8"
        android:layout_below="@+id/l1"
        android:background="@color/separate_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/webcat"
        android:layout_below="@+id/v8"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="微信服务"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:id="@+id/v9"
        android:layout_below="@+id/webcat"
        android:background="@color/separate_line"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="20dp"
        android:id="@+id/v10"
        android:layout_below="@+id/v9"
        android:background="@color/separate_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/about"
        android:layout_below="@+id/v10"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="关于小骨投"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="3px"
        android:id="@+id/v11"
        android:layout_below="@+id/about"
        android:background="@color/separate_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/controller"
        android:layout_below="@+id/v11"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="风险控制"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/to_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:id="@+id/v12"
        android:layout_below="@+id/controller"
        android:background="@color/separate_line"></View>

    <include layout="@layout/commen_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/footer_marginTop"
        android:layout_marginBottom="@dimen/footer_marginBottom"
        android:id="@+id/include4"></include>


</RelativeLayout>
